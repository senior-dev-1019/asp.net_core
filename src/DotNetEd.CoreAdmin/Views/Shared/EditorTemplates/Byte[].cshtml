@using DotNetEd.CoreAdmin
@model object
@if (ViewData.ModelMetadata.ModelType.IsArray)
{
    if (Model != null)
    {
        var base64 = ImageUtils.WebBase64EncodeImageByteArrayOrNull((byte[])Model);

        if (base64 != null)
        {
            <img height="128" src="@Html.Raw(base64)" />
            <br /><br />
        }
    }

    
    <input type="file" name="@ViewData.ModelMetadata.Name" id="@ViewData.ModelMetadata.Name"/>
    <br /><br />

}
